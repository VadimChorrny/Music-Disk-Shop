<Window x:Class="Authorization_UI_.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Authorization_UI_"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="400">
    <Grid>
        <StackPanel >
            <TextBlock Text="Enter login" FontSize="30" Width="350" Margin="0 30 0 0"/>
            <TextBox x:Name="txtLogin" FontSize="30" Width="350"/>
            <TextBlock Text="Enter password" FontSize="30" Margin="0 50 0 0" Width="350" />
            <TextBox x:Name="txtPassword" FontSize="30" Width="350"/>
            <Button Click="btnSignIn_Click" x:Name="btnSignIn" Content="Sign In" Width="350" Height="50" Margin="0 70 0 0" />
        </StackPanel>
    </Grid>
</Window>
