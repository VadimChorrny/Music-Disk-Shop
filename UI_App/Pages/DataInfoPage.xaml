<Page x:Class="UI_App.Pages.DataInfoPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UI_App.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DataInfoPage" Background="White">
    <Grid>
        <StackPanel>
            <ToolBar Height="30">
                <Button Width="150" Height="20" Content="Remove" Name="btnRemove" Click="btnRemove_Click" />
                <Button Width="150" Height="20" Content="Update" Name="btnUpdate" Click="btnUpdate_Click" />
            </ToolBar>
            <DataGrid x:Name="datagrid" CanUserAddRows="True" CanUserDeleteRows="True" CanUserSortColumns="True" />
        </StackPanel>
    </Grid>
</Page>
