<Page x:Class="UI_App.Pages.RegistrationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UI_App.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="400"
      Title="RegistrationPage" Background="White">

    <Grid>
        <StackPanel Margin="30">
            <TextBlock Text="Enter new login" FontSize="30" />
            <TextBox x:Name="txtLogin" FontSize="30" />
            <TextBlock Text="Enter e-mail" FontSize="30" />
            <TextBox x:Name="txtEmail" FontSize="30" />
            <TextBlock Text="Enter new password" FontSize="30" />
            <TextBox x:Name="txtPassword" FontSize="30" />
            <Button Margin="0 70 0 0" Height="40" Name="btnRegister" Click="btnRegister_Click" Content="New Account" FontSize="20" />
        </StackPanel>
    </Grid>
</Page>
