<Page x:Class="UI_App.Pages.SignInPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UI_App.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="400"
      Title="SignInPage" Background="White">

    <Grid>
        <StackPanel Margin="40">
            <TextBlock Text="Enter login" FontSize="30" />
            <TextBox x:Name="txtLogin" FontSize="30" />
            <TextBlock Text="Enter password" FontSize="30" />
            <TextBox x:Name="txtPassword" FontSize="30" />
            <Button Content="Sign In" FontSize="25" Height="50" Margin="0 120 0 0" />
        </StackPanel>
    </Grid>
</Page>
