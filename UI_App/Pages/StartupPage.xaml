<Page x:Class="UI_App.Pages.StartupPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UI_App.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StartupPage" Background="White" >

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" >
            <TextBlock FontSize="30" Text="Admin Panel for Album Store" FontWeight="Medium" />
            <TextBlock Text="App for insert and changes albums" FontSize="25" Margin="0 20 0 0" />
            <TextBlock Text="If you wont insert new Albums:" FontSize="25" />
            <TextBlock Text=" - Press 'New Items' button" FontSize="25" />
            <TextBlock Text="If you wont change selected Albums:" FontSize="25" />
            <TextBlock Text=" - Press 'Show Items' button" FontSize="25" />
            <TextBlock Text="Good luck!" FontSize="28" />
            <TextBlock Text="Made by Chorrny " FontSize="30" Margin="0 30 0 0" FontWeight="Medium" />
            <TextBlock>
                <Hyperlink NavigateUri="https://github.com/VadimChorrny" >My GitHub</Hyperlink>
            </TextBlock>
        </StackPanel>
    </Grid>
</Page>
