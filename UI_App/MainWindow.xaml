<Window x:Class="UI_App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI_App"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="180*"/>
            <ColumnDefinition Width="613*"/>
        </Grid.ColumnDefinitions >
        <Grid Grid.Column="0">
            <StackPanel>
                <Button Margin="10" Click="Button_Click" Height="50" Content="Add new item"/>
                <Button Margin="10" Click="Button_Click_1" Height="50" Content="Show all item"/>
                <Button Margin="10" Click="Button_Click_2" Height="50" Content="Exit"/>
            </StackPanel>
        </Grid>
        <Grid Grid.Column="1">
            <Frame x:Name="Main" NavigationUIVisibility="Hidden" />
        </Grid>
    </Grid>
</Window>
